{
    "compilerOptions": {
        "target": "es2022",
        "esModuleInterop": true,
        "module": "ESNext",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "build",
        "declaration": true,
        "declarationDir": "./types",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "NodeNext"
        }
    }
}
